<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csci366au17.ljc878.histeqimage.MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pickImage"
        android:text="Load Image"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">
    </Button>

    <ImageView
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="441dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginLeft="2dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original | Equalized"
        android:onClick="imageSelection"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1">
    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disp Mode"
        android:onClick="dispMode"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">
    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:text="Down"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="mdown"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:text="Right"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        android:onClick="mright"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:text="Left"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        android:layout_marginRight="0dp"
        android:onClick="mleft"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:text="UP"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="mup"/>


</android.support.constraint.ConstraintLayout>
